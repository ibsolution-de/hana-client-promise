{
  "editor.formatOnSave": false,
  "files.exclude": {
    "**/.DS_Store": true,
    "**/node_modules/": true,
    "**/dist/**/*.js.map": {
      "when": "$(basename)"
    },
    "**/dist/**/*.js": {
      "when": "$(basename).ts"
    }
  },
  "eslint.validate": [
    "javascript",
    "typescript"
  ],
  "[json]": {
    "editor.formatOnSave": true,
  },
  "[html]": {
    "editor.formatOnSave": true,
  },
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.tslint": false
  },
  "typescript.tsdk": "node_modules/typescript/lib"
}