{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./.buildcache/client.tsbuildinfo",
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es6", "dom", "esnext"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
